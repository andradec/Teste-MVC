@model IEnumerable<TesteMVC.Models.Amigo>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Amigos</h2>

<p>
    <a href="@Url.Action("Create", "Amigo")" class="btn btn-primary">
        Novo Amigo
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                <div>
                    <a href="@Url.Action("Edit", "Amigo", new { id = item.Id })" class="btn btn-warning btn-xs">
                        Editar
                    </a>
                    <a href="@Url.Action("Details", "Amigo", new { id = item.Id })" class="btn btn-info btn-xs">
                        Detalhes
                    </a>
                    <a href="@Url.Action("Delete", "Amigo", new { id = item.Id })" class="btn btn-danger btn-xs">
                        Excluir
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
