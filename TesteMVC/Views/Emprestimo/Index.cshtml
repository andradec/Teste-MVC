@model IEnumerable<TesteMVC.Models.Emprestimo>

@{
    ViewBag.Title = "Index";
}

<h2>Jogos Emprestados</h2>

<p>
    <a href="@Url.Action("Create", "Emprestimo")" class="btn btn-primary">
        Emprestar Jogo
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</p>
<p>
    @ViewBag.Message
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.Name("Emprestado Para")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jogo.Titulo)
        </th>
        <th>
            @Html.Name("Data do Emprestimo")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amigo.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jogo.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                <div>
                    @*<a href="@Url.Action("Edit", "Emprestimo", new { id = item.EmprestimoID })" class="btn btn-warning btn-xs">
                        Editar
                    </a>*@
                    <a href="@Url.Action("Details", "Emprestimo", new { id = item.EmprestimoID })" class="btn btn-info btn-xs">
                        Detalhes
                    </a>
                    <a href="@Url.Action("Delete", "Emprestimo", new { id = item.EmprestimoID })" class="btn btn-success btn-xs">
                        Devolver
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
