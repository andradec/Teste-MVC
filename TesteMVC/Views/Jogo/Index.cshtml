@model IEnumerable<TesteMVC.Models.Jogo>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Jogos</h2>

<p>
    <a href="@Url.Action("Create", "Jogo")" class="btn btn-primary">
        Novo Jogo
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>

</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estilo)
        </th>
        <th>
           @Html.Name("Lançamento")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estilo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lancamento)
            </td>
            <td>
                <div>
                    <a href="@Url.Action("Edit", "Jogo", new { id = item.Id })" class="btn btn-warning btn-xs">
                        Editar
                    </a>
                    <a href="@Url.Action("Details", "Jogo", new { id = item.Id })" class="btn btn-info btn-xs">
                        Detalhes
                    </a>
                    <a href="@Url.Action("Delete", "Jogo", new { id = item.Id })" class="btn btn-danger btn-xs">
                        Excluir
                    </a>
                </div>

            </td>
        </tr>
    }

</table>


